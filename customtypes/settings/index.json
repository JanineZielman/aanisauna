      "name": {
        "type": "StructuredText",
        "config": {
          "label": "Name",
          "placeholder": "Name of your blog (e.g. your name)",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "Short description of your blog",
          "allowTargetBlank": false,
          "single": "paragraph"
        }
      },
      "socialImage": {
        "type": "Image",
        "config": {
          "label": "Social Image",
          "constraint": {
            "width": 2000,
            "height": 2000
          },
          "thumbnails": []
        }
      },
      "about": {
        "type": "StructuredText",
        "config": {
          "label": "About",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,em,strong,hyperlink"
        }
      },
      "scroll_text": {
        "type": "Text",
        "config": {
          "label": "Scroll Text",
          "placeholder": ""
        }
      }
